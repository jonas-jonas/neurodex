  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "port": 8081,
      "console": "internalConsole",
      "cwd": "${workspaceFolder}/src",
      "env": {
        "FLASK_APP": "neurodex.main:app",
        "FLASK_ENV": "development",
        "FLASK_DEBUG": "1",
        "DATABASE_URL": "postgresql://postgres:docker@localhost:5432/postgres"
      },
      "args": [
        "run",
        "--port=8081",
      ],
      "jinja": true,
    }
  ]
}